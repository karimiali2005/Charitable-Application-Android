<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <!-- Header aligned to top -->
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:gravity="center">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:weightSum="1"
                android:background="@color/BackColorTopTitleLayout"
                >
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:padding="60dp"
                        android:id="@+id/imgButtonHome"
                        android:background="@color/BackColorButtonImageTitleLayout"
                        android:layout_gravity="right" android:src="@drawable/hom"
                        android:layout_alignParentRight="true"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:paddingRight="10dp"
                          android:gravity="center"
                          android:text="@string/mainmenutitle"  android:textColor="@color/WhiteColor" android:textSize="17dp"
                          android:layout_gravity="center_horizontal"
                          android:layout_centerVertical="true" android:layout_toLeftOf="@+id/imgButtonHome"/>
                <!--<ImageButton
                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:gravity="center"
                        android:src="@drawable/big_logo"
                        android:background="@color/BackColorTopTitleLayout"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentLeft="true"/>-->

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:gravity="center">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:weightSum="1"
                android:background="@color/BackColorBottomTitleLayout"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:padding="5dp"
                    android:textSize="17dp"
                    android:text="@string/btnLogout"
                    android:id="@+id/lblLogout"
                    />
            <ImageButton android:layout_width="35dp" android:layout_height="35dp"

                         android:gravity="center"
                         android:background="@null" android:id="@+id/btnLogout"
                         android:layout_gravity="center"
                         android:scaleType="fitCenter"
                         android:src="@drawable/mainpage_exit_icon"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/footer"
            android:layout_below="@id/header"
            android:gravity="center">
            <LinearLayout
              android:orientation="vertical"

              android:layout_alignParentRight="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shapebackground"
              android:weightSum="1">




    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnBoxReport"
                    android:layout_gravity="center"
                         android:src="@drawable/mainpage_report_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BoxReport"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnBoxDichargeItem"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_delsafe_iocn"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BoxDichargeItemTitle"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnMission"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_mission_icon"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/MissionTitle"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnBoxMovement"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_movesafe_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/BoxMovementTitle"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"

                    android:background="@drawable/shapemenu" android:id="@+id/btnBoxEdit"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_editsafe_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/BoxEditTitle"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnBoxNew"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_newsafe_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/BoxNewTitle"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnMissionFinish"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_finishmission_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/btnMissionFinish"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
        <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/shapemenu" android:id="@+id/btnSendOffline"
                android:layout_gravity="center"
                android:src="@drawable/mainpage_send_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/SendOffline"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            <ImageButton android:layout_width="70dp" android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:background="@drawable/shapemenu" android:id="@+id/btnReceiveOffline"
                    android:layout_gravity="center"
                    android:src="@drawable/mainpage_recieve_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/MenuTextColor"
                    android:text="@string/ReceiveOffline"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
